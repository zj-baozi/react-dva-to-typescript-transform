{
  "compilerOptions": {
    "strict": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "jsx": "react",
    "baseUrl": "./",
    "typeRoots": ["typings"],
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "config",
    "data",
    "jest.config.js",
    "jsconfig.json",
    "package.json",
    "README.md",
    "speed-measure.json",
    "tsconfig.json",
    "tslint.json"
  ]
}
