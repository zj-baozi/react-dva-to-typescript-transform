{
  "compilerOptions": {
    "outDir": "dist",
    "module": "commonjs",
    "target": "es2015",
    "lib": ["dom", "es2015"],
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "resolveJsonModule": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "allowJs": false,
    "experimentalDecorators": true,
    "strict": true,
    "sourceRoot": "./src",
    "typeRoots": ["types"],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["./src/*", "./src/tsconfig_practices.json"],
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts",
    "src/global.d.ts",
    "tslint:latest",
    "tslint-config-prettier",
    "./test"
  ],
  "types": ["node", "jest"]
}
